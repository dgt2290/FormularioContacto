<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MiTema" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/dark_pink</item>

        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="formulariosLayout" parent="">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margen_left</item>
        <item name="android:layout_marginTop">@dimen/margen_top</item>
        <item name="android:layout_marginRight">@dimen/margen_right</item>
        <item name="android:layout_marginBottom">@dimen/margen_bottom</item>
    </style>

    <style name="formulariosTxtImput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="confirmar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/Confirmacion</item>
        <item name="android:textSize">@dimen/confirmar</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/confirmar_top</item>
        <item name="android:layout_marginBottom">@dimen/confirmar_bottom</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="confirmacionTxtView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/pad_top</item>
        <item name="android:paddingBottom">@dimen/pad_bottom</item>
        <item name="android:paddingLeft">@dimen/pad_left</item>
        <item name="android:paddingRight">@dimen/pad_left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="layoutAux" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margen_top</item>

    </style>

</resources>